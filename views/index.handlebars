<div id="all">
    <div class="jumbotron">
        <div class="container" id="siteTitle">
            <img src="https://cdn.pixabay.com/photo/2014/04/02/10/49/burger-304707_960_720.png" width="200px"
                height="200px" alt="...">
            <h1 class="display-4">Build Your Burger</h1>
            <p class="lead">Creating monstrosities with care.</p>
        </div>
        <hr class="my-4">
        <div id="burgerBuilder" class="row">
            <div class="card-body col-lg-9">
                <form>
                    <div class="form-group">
                        <label for="burger" class="lead">Cough up the Cow Below</label>
                        <input type="text" class="form-control" id="burger" height="500px">
                        <button type="submit" class="btn" id="submitBurger" style="margin-top:20px;">Burger
                            Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="menu">
        <div class=" title">
            <img class="condiments" src="https://cdn.pixabay.com/photo/2013/07/13/10/52/bar-157942_960_720.png"
                height="80px;">

            <h1 class=" display-4">Up for Grabs</h1>
        </div>
        <div class="container">
            <div class="container" id="available">
                {{#each burgers}}
                {{#unless devoured}}
                <div class="card" style="width: 18rem;">
                    <img src="" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title"> #{{this.id}} {{this.burger_name}}
                        </h5>
                        <button data-id=' {{this.id}}' data-devoured='{{this.devoured}}' class='devourIt btn'>Devour
                            it!</button>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="title">
            <img class="condiments" src="https://cdn.pixabay.com/photo/2013/07/13/10/52/bar-157942_960_720.png"
                height="80px;">
            <h1 class="display-4">Gobbled Up</h1>
        </div>
        <div class="container-fluid">
            <div class="container" id="unavailable">
                {{#each burgers}} {{#if devoured}}
                <div class="card" style="width: 18rem;">
                    <img src="" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"> #{{this.id}} {{this.burger_name}}
                        </h5>
                        <button data-id='{{this.id}}' data-devoured='{{this.devoured}}' class='prep btn'>Prep
                            it!</button>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>